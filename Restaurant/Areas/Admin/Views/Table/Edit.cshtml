@model Restaurant.DataContext.Entities.Table

<div class="container mt-4">
    <h3>Edit Table</h3>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="TableNumber" class="form-label"></label>
            <input asp-for="TableNumber" class="form-control" />
            <span asp-validation-for="TableNumber" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Capacity" class="form-label"></label>
            <input asp-for="Capacity" class="form-control" />
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Status" class="form-label"></label>
            <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<Restaurant.DataContext.Entities.TableStatus>()"></select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-area="Admin" asp-controller="Table" asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>