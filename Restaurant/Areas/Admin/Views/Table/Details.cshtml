@model Restaurant.DataContext.Entities.Table

<div class="container mt-4">
    <h3>Table Details</h3>

    <dl class="row">
        <dt class="col-sm-3">Table Number</dt>
        <dd class="col-sm-9">@Model.TableNumber</dd>

        <dt class="col-sm-3">Capacity</dt>
        <dd class="col-sm-9">@Model.Capacity</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status.ToString()</dd>
    </dl>

    <a asp-area="Admin" asp-controller="Table" asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>