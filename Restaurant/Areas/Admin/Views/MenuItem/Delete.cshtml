@model Restaurant.DataContext.Entities.MenuItem

<h2>Delete Menu Item</h2>

<h5>Are you sure you want to delete this menu item?</h5>

<div>
    <strong>@Model.Name</strong>
</div>

<form asp-area="Admin" asp-controller="MenuItem" asp-action="Delete" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-area="Admin" asp-controller="MenuItem" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>