@model Restaurant.DataContext.Entities.MenuItem

<h2>Menu Item Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd>

        <dt class="col-sm-2">Availability</dt>
        <dd class="col-sm-10">@((Model.IsAvaliable) ? "Available" : "Not Available")</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 300px;" />
            }
            else
            {
                <span>No image available.</span>
            }
        </dd>
    </dl>
</div>

<a asp-area="Admin" asp-controller="MenuItem" asp-action="Index" class="btn btn-secondary">Back to List</a>
<a asp-area="Admin" asp-controller="MenuItem" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
