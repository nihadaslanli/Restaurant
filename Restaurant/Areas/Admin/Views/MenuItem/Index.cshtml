@model List<Restaurant.DataContext.Entities.MenuItem>

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">Menu Items</h4>

        <a asp-area="Admin" asp-controller="MenuItem" asp-action="Create" class="btn btn-success mb-3">
            Create New Menu Item
        </a>

        <div class="card">
            <h5 class="card-header">Menu Items CRUD</h5>
            <div class="table-responsive text-nowrap">
                <table class="table table-bordered align-middle">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Available</th>
                            <th>Update</th>
                            <th>Read</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@item.ImageUrl" width="60" height="60" style="object-fit:cover;" />
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Category?.Name</td>
                                <td>@item.Price.ToString("C")</td>
                                <td>@(item.IsAvaliable ? "Yes" : "No")</td>
                                <td>
                                    <a asp-area="Admin" asp-controller="MenuItem" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">Update</a>
                                </td>
                                <td>
                                    <a asp-area="Admin" asp-controller="MenuItem" asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Read</a>
                                </td>
                                <td>
                                    <form asp-area="Admin" asp-controller="MenuItem" asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure?');" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>