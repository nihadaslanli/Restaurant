@{
	Layout = null;
}
@model ChangePasswordViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Change Password</title>
    <link rel="stylesheet" href="~/assets/css/login.css" />
    <style>
        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            font-family: 'Montserrat', sans-serif;
            background: linear-gradient(120deg, #f6d365 0%, #fda085 100%);
            background-size: cover;
            overflow: hidden;
        }

        .main {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1;
        }

        .change-password-panel {
            background: rgba(255,255,255,0.18);
            backdrop-filter: blur(18px) saturate(200%);
            -webkit-backdrop-filter: blur(18px) saturate(200%);
            border-radius: 24px;
            box-shadow: 0 12px 48px 0 rgba(31,38,135,0.18), 0 0 0 2px #fff2;
            display: flex;
            flex-direction: column;
            align-items: center;
            max-width: 420px;
            min-width: 320px;
            padding: 56px 40px 40px 40px;
            animation: fadeInUp 1.2s cubic-bezier(.39,.575,.56,1.000) both;
            transition: box-shadow 0.3s, transform 0.2s;
        }

            .change-password-panel label {
                font-size: 2.2rem;
                font-weight: 800;
                color: #FF4B2B;
                margin-bottom: 18px;
                letter-spacing: 3px;
                text-shadow: 0 2px 16px #fff8, 0 0 2px #FF4B2B44;
                text-align: center;
                text-transform: uppercase;
            }

            .change-password-panel input {
                width: 100%;
                padding: 14px 18px;
                margin: 12px 0;
                border: 1.5px solid #eee;
                border-radius: 10px;
                font-size: 1.12rem;
                background: rgba(255,255,255,0.85);
                box-shadow: 0 2px 8px rgba(31,38,135,0.04);
                transition: box-shadow 0.2s, background 0.2s;
            }

                .change-password-panel input:hover, .change-password-panel input:focus {
                    background: #fffbe7;
                    border: 1.5px solid #fcb045;
                    box-shadow: 0 0 0 2px #fcb04555;
                    transition: background 0.2s, border 0.2s, box-shadow 0.2s;
                }

            .change-password-panel span[asp-validation-for] {
                color: #FF4B2B;
                font-size: 0.98rem;
                margin-bottom: 6px;
                display: block;
                min-height: 18px;
                text-align: left;
            }

            .change-password-panel button {
                margin-top: 30px;
                width: 100%;
                padding: 14px 0;
                border: none;
                border-radius: 12px;
                background: linear-gradient(90deg, #FF4B2B 0%, #FF416C 100%);
                color: #fff;
                font-size: 1.18rem;
                font-weight: 800;
                letter-spacing: 2px;
                cursor: pointer;
                box-shadow: 0 4px 18px rgba(255,75,43,0.13);
                transition: background 0.2s, transform 0.1s;
            }

                .change-password-panel button:hover {
                    background: linear-gradient(90deg, #FF416C 0%, #FF4B2B 100%);
                    transform: translateY(-3px) scale(1.04);
                    box-shadow: 0 8px 32px #fd1d1d33;
                }
    </style>
</head>
<body>
    <div class="main">
        <div class="change-password-panel">
            <form method="post">
                <label for="chk" aria-hidden="true">Change Password</label>
                <input asp-for="CurrentPassword" placeholder="Current Password" required="">
                <span asp-validation-for="CurrentPassword"></span>
                <input asp-for="NewPassword" placeholder="New Password" required="">
                <span asp-validation-for="NewPassword"></span>
                <input asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
                <span asp-validation-for="ConfirmPassword"></span>
                <div asp-validation-summary="ModelOnly"></div>
                <button type="submit">Change Password</button>
            </form>
        </div>
    </div>
</body>
</html>