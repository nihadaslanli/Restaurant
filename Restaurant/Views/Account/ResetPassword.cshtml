@{
    Layout = null;
}
@Html.AntiForgeryToken()
@model ResetPasswordViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Reset Password</title>
    <link rel="stylesheet" href="~/assets/css/login.css" />
    <style>
        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            font-family: 'Montserrat', sans-serif;
            background: #222;
            overflow: hidden;
        }

        .video-bg {
            position: fixed;
            top: 0;
            left: 0;
            min-width: 100vw;
            min-height: 100vh;
            width: 100vw;
            height: 100vh;
            object-fit: cover;
            z-index: -1;
            filter: brightness(0.5) blur(2px) grayscale(0.1);
            pointer-events: none;
            animation: bgZoom 20s infinite alternate ease-in-out;
        }
        

        .main {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1;
        }

        .login {
            background: rgba(255,255,255,0.18);
            backdrop-filter: blur(18px) saturate(200%);
            -webkit-backdrop-filter: blur(18px) saturate(200%);
            border-radius: 24px;
            box-shadow: 0 12px 48px 0 rgba(31,38,135,0.18), 0 0 0 2px #fff2;
            display: flex;
            flex-direction: column;
            align-items: center;
            max-width: 420px;
            min-width: 320px;
            padding: 56px 40px 40px 40px;
            animation: fadeInUp 1.2s cubic-bezier(.39,.575,.56,1.000) both;
            transition: box-shadow 0.3s, transform 0.2s;
        }

            .login label {
                font-size: 2.2rem;
                font-weight: 800;
                color: #FF4B2B;
                margin-bottom: 18px;
                letter-spacing: 3px;
                text-shadow: 0 2px 16px #fff8, 0 0 2px #FF4B2B44;
                text-align: center;
                text-transform: uppercase;
            }

            .login input {
                width: 100%;
                padding: 14px 18px;
                margin: 12px 0;
                border: 1.5px solid #eee;
                border-radius: 10px;
                font-size: 1.12rem;
                background: rgba(255,255,255,0.85);
                box-shadow: 0 2px 8px rgba(31,38,135,0.04);
                transition: box-shadow 0.2s, background 0.2s;
            }

                .login input:hover, .login input:focus {
                    background: #fffbe7;
                    border: 1.5px solid #fcb045;
                    box-shadow: 0 0 0 2px #fcb04555;
                    transition: background 0.2s, border 0.2s, box-shadow 0.2s;
                }

            .login span[asp-validation-for] {
                color: #FF4B2B;
                font-size: 0.98rem;
                margin-bottom: 6px;
                display: block;
                min-height: 18px;
                text-align: left;
            }

            .login button {
                margin-top: 30px;
                width: 100%;
                padding: 14px 0;
                border: none;
                border-radius: 12px;
                background: linear-gradient(90deg, #FF4B2B 0%, #FF416C 100%);
                color: #fff;
                font-size: 1.18rem;
                font-weight: 800;
                letter-spacing: 2px;
                cursor: pointer;
                box-shadow: 0 4px 18px rgba(255,75,43,0.13);
                transition: background 0.2s, transform 0.1s;
            }

                .login button:hover {
                    background: linear-gradient(90deg, #FF416C 0%, #FF4B2B 100%);
                    transform: translateY(-3px) scale(1.04);
                    box-shadow: 0 8px 32px #fd1d1d33;
                }

        .reset-photo {
            position: absolute;
            top: 48px;
            left: 50%;
            transform: translateX(-50%);
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 24px;
            box-shadow: 0 8px 32px #2228, 0 2px 12px #fff5;
            border: 3px solid #fff;
            z-index: 2;
            background: #fff;
            animation: fadeInUp 1.2s cubic-bezier(.39,.575,.56,1.000) both;
        }

        .photo-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            object-fit: cover;
            z-index: -2;
            filter: brightness(0.7) blur(1.5px) grayscale(0.08);
        }
    </style>
</head>
<body>
    <img class="photo-bg" src="https://images.unsplash.com/photo-1504674900247-0877df9cc836?auto=format&fit=crop&w=1500&q=80" alt="Background Photo">
    <video class="video-bg" autoplay loop muted playsinline>
        <source src="https://videos.pexels.com/video-files/6261647/6261647-hd_1920_1080_25fps.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    <div class="main">
        <div class="login">

            <form id="form1" class="form-group flex-wrap " method="post">
                <div class="form-input col-lg-12 my-4">
                    <input asp-for="NewPassword" placeholder="Enter new password"
                           class="form-control mb-3 p-4" aria-describedby="passwordHelpBlock">
                    <span asp-validation-for="NewPassword"></span>
                    <input asp-for="ConfirmPassword" placeholder="Confirm password"
                           class="form-control mb-3 p-4" aria-describedby="passwordHelpBlock">
                    <span asp-validation-for="ConfirmPassword"></span>
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="d-grid my-3">
                        <button type="submit" class="btn btn-dark btn-lg rounded-1">Reset password</button>
                    </div>

                </div>
            </form>
        </div>
    </div>
</body>
</html>
